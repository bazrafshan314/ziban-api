{
    "openapi": "3.0.0",
    "info": {
        "title": "Ziban internal api documentation"
    },
    "paths": {
        "/users/": {
            "get": {
                "summary": "Get a list of all users"
            }
        },
        "/users/register/": {
            "post": {
                "summary": "Create a new user",
                "parameters": [
                    {
                        "name": "username",
                        "location": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "email",
                        "location": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "location": "query",
                        "schema": {
                            "type": "string"
                        }
                    }
                ]
            }
        },
        "/users/login/": {
            "post": {
                "summary": "Log a user in",
                "parameters": [
                    {
                        "name": "username",
                        "location": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "location": "query",
                        "schema": {
                            "type": "string"
                        }
                    }
                ]
            }
        },
        "/users/token/": {
            "post": {
                "summary": "Get the authentication token of a user",
                "parameters": [
                    {
                        "name": "username",
                        "location": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "location": "query",
                        "schema": {
                            "type": "string"
                        }
                    }
                ]
            }
        }
    },
    "servers": [
        {
            "url": "/api"
        }
    ]
}
