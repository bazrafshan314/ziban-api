{
    "openapi": "3.0.0",
    "info": {
        "title": "Ziban internal api documentation"
    },
    "paths": {
        "/users/": {
            "get": {
                "summary": "Get a list of all users"
            }
        },
        "/users/register/": {
            "post": {
                "summary": "Create a new user",
                "parameters": [
                    {
                        "name": "username",
                        "location": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "email",
                        "location": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "location": "query",
                        "schema": {
                            "type": "string"
                        }
                    }
                ]
            }
        },
        "/users/login/": {
            "post": {
                "summary": "Log a user in",
                "parameters": [
                    {
                        "name": "username",
                        "location": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "location": "query",
                        "schema": {
                            "type": "string"
                        }
                    }
                ]
            }
        },
        "/users/token/": {
            "post": {
                "summary": "Get the authentication token of a user",
                "parameters": [
                    {
                        "name": "username",
                        "location": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "location": "query",
                        "schema": {
                            "type": "string"
                        }
                    }
                ]
            }
        },
        "/products/{id}": {
            "get": {
                "summary": "Retrieve a product"
            }
        },
        "/products/category_filter/": {
            "get": {
                "summary": "List all products in a certain cetegory",
                "parameters": [
                    {
                        "name": "category",
                        "location": "query",
                        "schema": {
                            "type": "integer"
                        },
                        "description": "category id"
                    }
                ]
            }
        },
        "/products/add_to_cart/": {
            "post": {
                "summary": "Add product to shopping cart of the logged-in user",
                "parameters": [
                    {
                        "name": "product",
                        "location": "query",
                        "schema": {
                            "type": "integer"
                        },
                        "description": "product id"
                    },
                    {
                        "name": "count",
                        "location": "query",
                        "schema": {
                            "type": "integer"
                        },
                        "description": "how many items to add"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request/Not enough products"
                    }
                }
            }
        },
        "/categories/": {
            "get": {
                "summary": "List all categories"
            }
        },
        "/categories/{id}": {
            "get": {
                "summary": "Get a certain cateogry by id"
            }
        }
    },
    "servers": [
        {
            "url": "/api"
        }
    ]
}
